# Variables de entorno para el backend
# Copiar este archivo a .env para desarrollo local
# NO commitear secretos reales al repositorio

# Puerto del servidor
PORT=5000

# Base de datos MongoDB
# En desarrollo: mongodb://localhost:27017/inventario_mantenimiento
# En producción: usar MongoDB Atlas o servicio similar
MONGODB_URI=mongodb://localhost:27017/inventario_mantenimiento

# Clerk Authentication (requerido)
CLERK_SECRET_KEY=sk_test_your_secret_key_here
CLERK_ISSUER=https://well-marmot-74.clerk.accounts.dev
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# CORS - permitir conexiones desde el frontend
# En desarrollo: http://localhost:5173
# En producción: https://tu-frontend-en-vercel.vercel.app
CORS_ORIGIN=http://localhost:5173

# JWT Secret (para tokens adicionales si es necesario)
JWT_SECRET=tu_clave_secreta_aqui

# Configuración opcional
# SKIP_DB=false (establecer a true para omitir conexión a BD en health checks)
SKIP_DB=false

# Configuración de logs
LOG_LEVEL=info
